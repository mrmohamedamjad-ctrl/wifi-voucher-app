{
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "npm start",
    "restartPolicyType": "ON_FAILURE",
    "healthcheckPath": "/docs",
    "healthcheckTimeout": 100
  },
  "environments": {
    "production": {
      "variables": {
        "PORT": "8080",
        "JWT_SECRET": "change_me_in_dashboard",
        "DB_FILE": "./data/app.db"
      }
    }
  }
}
